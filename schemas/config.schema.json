{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kobra Kreator â€“ site config",
  "type": "object",
  "required": ["distantDirectory"],
  "additionalProperties": false,
  "properties": {
    "distantDirectory": {
      "type": "string",
      "description": "Absolute output path",
      "pattern": "^(?:[a-zA-Z]:\\\\|/)"
    },
    "prettyUrls": {
      "type": "boolean",
      "description": "Omit .html extensions and emit index.html files"
    },
    "hashAssets": {
      "type": "boolean",
      "description": "Add content hash to CSS and JS filenames"
    }
  }
}
